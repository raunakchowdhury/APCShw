import java.util.Random;

public class Greet{
    
    public static void main (String[] args){
	greet();
    }
    
    static void greet(){
      	/*Generates a hardcoded name randomly*/
	Random instance = new Random(); 
	int randomNumber = instance.nextInt(3);
	
	String name = "";
	if (randomNumber == 0){
	     name = "Dylan";
	} else if (randomNumber == 1){
	     name = "Bert";
	} else {
	     name = "Hilda";
	} 
	
	System.out.println("No hablo queso, " + name);
    }	
}


